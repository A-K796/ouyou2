<body>
  <h1>Follow Users</h1>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @followings.each do |followings| %>
      <tr>
        <td><%= attachment_image_tag(followings, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
        <td><%= followings.name %></td>
        <td><%= followings.followings.count %></td>
        <td><%= followings.followers.count %></td>
        <td><%= link_to "show", user_path(followings) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>